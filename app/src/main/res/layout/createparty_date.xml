<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/colorContent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/createDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:fontFamily="@font/ptsansbold"
    />
    <TextView
            android:text="2019-01-11"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/createpartyDate"
            app:layout_constraintBottom_toBottomOf="@+id/textView7" app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
            android:fontFamily="@font/ptsans" android:textColor="@android:color/background_light"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@android:color/background_light"
            android:fontFamily="@font/ptsansbold" android:textSize="18sp"/>
    <TextView
            android:text="03:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createPartyTime"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@+id/textView14"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginStart="8dp"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:fontFamily="@font/ptsans"/>
</androidx.constraintlayout.widget.ConstraintLayout>