<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/colorContent"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partyInfoTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="36sp"
            android:textColor="@android:color/background_light"
            android:fontFamily="@font/ptsansbold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberOfParty"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/partyInfoDescription" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/partyInfoTitle"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:textColor="@android:color/background_light" android:fontFamily="@font/ptsansbold"
            android:textSize="18sp"/>
    <TextView
            android:text="â„–12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfParty" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@android:color/background_light" android:textSize="18sp"
            android:fontFamily="@font/ptsans"/>
</androidx.constraintlayout.widget.ConstraintLayout>