<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/colorContent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"

            android:fontFamily="@font/ptsansbold" android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/partyInfoCurrent"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            android:fontFamily="@font/ptsansbold" android:textSize="30sp"
            android:textColor="@color/violet_eggplant_amount"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/partyInfoTotal"
            app:layout_constraintBottom_toBottomOf="@+id/partyInfoCurrent"
            app:layout_constraintTop_toTopOf="@+id/partyInfoCurrent"
            app:layout_constraintStart_toEndOf="@+id/partyInfoCurrent"
            android:textSize="30sp" android:fontFamily="@font/ptsansbold"
            android:textColor="@android:color/background_light" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>