<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/colorContent"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/register_profile_photo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/registerChoosePhoto"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/choose_photo" app:layout_constraintEnd_toEndOf="@+id/register_profile_photo"
            app:layout_constraintStart_toStartOf="@+id/register_profile_photo"
            app:layout_constraintTop_toBottomOf="@+id/register_profile_photo"
            android:background="@drawable/confirm_button" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" android:textColor="@android:color/background_light"
            android:fontFamily="@font/ptsans" android:textSize="18sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>