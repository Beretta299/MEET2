<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"

                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="@color/colorContent"

                                             android:layout_height="wrap_content">
    <TextView
            android:text="@string/registerDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:clickable="true"
            android:textColor="@android:color/background_light" android:fontFamily="@font/ptsansbold"
            android:textSize="18sp" android:layout_marginStart="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="11.01.2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerDate"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" android:fontFamily="@font/ptsans"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>