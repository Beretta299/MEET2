<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/f1c6ea2de8459c744bc06071ab9d9ee2"
            android:id="@+id/image_template" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/closeImage"
            android:textColor="@android:color/background_light" android:background="@drawable/category_container"
            android:textSize="24sp" android:fontFamily="@font/ptsans"
            app:layout_constraintEnd_toEndOf="@+id/image_template"
            app:layout_constraintTop_toTopOf="@+id/image_template" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_template"
            app:layout_constraintStart_toStartOf="@+id/image_template" app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintVertical_bias="0.045"/>
</androidx.constraintlayout.widget.ConstraintLayout>